<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/town_root">
    <ImageView
        android:id="@+id/item_town_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:alpha=".75"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/item_town_color"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />
    <TextView
        android:id="@+id/item_town_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        fontPath="fonts/fontawesome-webfont.ttf"
        android:text="@string/font_awesome_icon_heart"
        tools:ignore="MissingPrefix,RtlHardcoded"
        android:textSize="@dimen/basic_text"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/item_town_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_town_icon"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="2.2K"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_town_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krakow"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="32sp" />







</RelativeLayout>