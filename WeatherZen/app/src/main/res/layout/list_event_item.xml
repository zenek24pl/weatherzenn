<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_event_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/blue_medium"
    >
    <TextView
        android:id="@+id/item_event_position"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_position"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_event_details"
        fontPath="fonts/fontawesome-webfont.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/green"
        android:gravity="right"
        android:text="@string/font_awesome_icon_search"
        android:textSize="25sp"
        tools:ignore="MissingPrefix,RtlHardcoded" />
    <LinearLayout
        android:id="@+id/item_event1"
        android:layout_width="match_parent"
        android:paddingRight="30dp"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/item_event_name"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/basic_text"
            android:textColor="@color/blue_very_light"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:text="SKLEP MORELA" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_event4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_event1"
        android:paddingRight="25dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/item_event_place"
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/basic_text"
            tools:text="SKLEP MORELA" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_event5"
        android:layout_width="match_parent"
        android:paddingRight="25dp"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_event4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_event_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLength="10"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textSize="@dimen/basic_text"
            android:textColor="@color/white"
            tools:text="SKLEP MORELA" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_below="@id/item_event5"
        android:layout_height="3dp"
        android:background="@color/blue_button"/>

</RelativeLayout>